                                         as.list(g$scales$scales[[i]]),
                                         .f=identical2)
      if(!all(compare_all_scales)){
        return(fail("Les échelles ne sont pas paramétrées comme je l'attendais"))
      }
    }
  }
  # Pass
  return(pass(pass_message))
}
####################""

